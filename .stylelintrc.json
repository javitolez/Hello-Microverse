// 20220527101933
// https://raw.githubusercontent.com/microverseinc/linters-config/master/html-css/.stylelintrc.json

{
    "extends": [
      "stylelint-config-standard"
    ],
    "plugins": [
      "stylelint-scss",
      "stylelint-csstree-validator"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    },
    "csstree/validator": true,
    "ignoreFiles": [
      "build/**",
      "dist/**",
      "**/reset*.css",
      "**/bootstrap*.css"
    ]
  }